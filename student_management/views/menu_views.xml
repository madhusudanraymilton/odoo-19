<odoo>
    <data>
        <!-- Action Field -->
        <record id="action_student" model="ir.actions.act_window">
            <field name="name">Student</field>
            <field name="res_model">student.student</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="action_course" model="ir.actions.act_window">
            <field name="name">Course</field>
            <field name="res_model">student.course</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="action_enrollment" model="ir.actions.act_window">
            <field name="name">Enrollment</field>
            <field name="res_model">student.enrollment</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menu Fields-->

        <record id="menu_student_management_root" model="ir.ui.menu">
            <field name="name">Student Management</field>
            <field name="sequence">10</field>
        </record>

        <record id="menu_student" model="ir.ui.menu">
            <field name="name">Student</field>
            <field name="parent_id" ref="menu_student_management_root"/>
            <field name="action" ref="action_student"/>
            <field name="sequence">1</field>
        </record>

        <record id="menu_course" model="ir.ui.menu">
            <field name="name">Course</field>
            <field name="parent_id" ref="menu_student_management_root"/>
            <field name="action" ref="action_course"/>
            <field name="sequence">2</field>
        </record>

        <record id="menu_enrollment" model="ir.ui.menu">
            <field name="name">Enrollment</field>
            <field name="parent_id" ref="menu_student_management_root"/>
            <field name="action" ref="action_enrollment"/>
            <field name="sequence">3</field>
        </record>

    </data>
</odoo>